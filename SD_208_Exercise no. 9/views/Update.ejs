<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Info</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="../public/form.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body><center>

<div class = "card card-3">
    
    <div class = "card-heading" style="background-image: url('../public/img1.jpg')">
    </div>
    <div class = "card-body">
        <button
        style="width:auto;height:35px;background-color:transparent;position: absolute;border: none;border-radius:5px;top: 5px;right: 5px;"><a
            href="/home" style="text-decoration:none;color:white;"><i class="fa fa-arrow-left"></i>Back</a></button>
        <form action="/updated" method="post">
        <h2 class = "title">Update Info</h2>
        <input type="hidden" name="id" value="<%= user._id %>">
            <div class = "input-group">
              <input type="text" class="input--style-3" value = "<%= user.firstname %>" name="firstname" autocomplete='off'>
            </div>
            <div class = "input-group">
              <input type="text" class="input--style-3" value = "<%= user.lastname %>" name="lastname" autocomplete='off'>
            </div>
            <div class = "input-group">
              <input type="email" class="input--style-3" value = "<%= user.email %>" name="email" id="email" autocomplete='off'>
            </div>
            <div class = "input-group">
              <input type="password" class="input--style-3" placeholder = "Password" value="<%= user.password %>" name="password" autocomplete='off'>
            </div>
            <button type="submit" name="submit" class="btn">Update</button>
        </form>
    </div>
</div>
<div class="error">
    <small id="eremail"></small>
    <ul class="list-group">
        <% for(let i = 0; i< data.length; i++){ %>
        <li class="list-group-item"><%= data[i] %></li>
        <% } %>
    </ul>
</div>
</body>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script>
    $(document).ready(() => {
        $("#email").on("input", function() {
        var filter = /^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
        if (!filter.test($("#email").val())) {
            $('#eremail').text('Invalid email address!')
            $('.btn').attr("disabled", true)
        } else {
            $('#eremail').text("")
            $('.btn').attr("disabled", false)
        }
    });
    })
</script>
</html>